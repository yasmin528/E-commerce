@model List<Category>
<a class="btn Sbtn mt-3 mb-2" asp-action="NewCategory" asp-controller="Admin">New</a>
<table class="table table-striped mb-2" style="padding-left:20px;" >
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-center">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Category in Model)
        {
            <tr>
                <td scope="row" style="padding-left:20px">@Category.Id</td>
                <td><img src="~/Images/@Category.ImagePath" width="200px" height="200px" /></td>
                <td>@Category.Name</td>
                <td>@Category.Description</td>
                <td><a class="btn Sbtn" asp-action="EditCategory" asp-controller="Admin" asp-route-id=@Category.Id>Edit</a></td>
                <th><a class="btn btn-danger" style="background-color:#dc3545" onclick="Delete(@Category.Id)">Delete</a></th>
            </tr>
        }
    </tbody>
</table>

<script>
    function Delete(id) {
        var confirmMessage = "Are you sure you want to delete this Category notice that all products in this category will be deleted too?";
        if (window.confirm(confirmMessage)) {
            window.location.href = "DeleteCategory/" + id;
        }
    }
</script>