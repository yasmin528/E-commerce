@model Category
<link rel="stylesheet" href="~/css/EditProfile.css" />
<div class="container bootstrap snippets bootdey mt-2">
    <div class="row">
        <div class="col-md-9 personal-info">
            <h3 style="color: black">Category info</h3>

            <form class="form-horizontal shadow" role="form" asp-action="NewCategory" asp-controller="Admin" method="post">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Name:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Description:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-2">
                    <label class="col-lg-3 control-label">Upload a different photo...</label>
                    <div class="col-lg-12">
                        <input class="form-control" type="file" name="ImagePath" required>
                    </div>
                </div>
                <br />
                <button type="submit" class="btn Sbtn">Save</button>
            </form>
        </div>
    </div>
</div>
<hr>



