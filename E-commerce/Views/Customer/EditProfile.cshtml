@model User
<link rel="stylesheet" href="~/css/EditProfile.css"/>
<div class="container bootstrap snippets bootdey mt-2">
    <h1 style="color: black">Edit Profile</h1>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <div class="text-center">
                <img src="~/Images/@Model.ImagePath" class="avatar img-circle img-thumbnail" style="width:200px;height:200px;" alt="avatar">
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <h3 style="color: black">Personal info</h3>

            <form class="form-horizontal shadow" role="form" asp-action="EditProfile" asp-controller="Customer" method="post">
                <input type="hidden" name="Id" value="@Model.Id"/>
                <div class="form-group">
                    <label class="col-lg-3 control-label">First name:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Last name:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Username:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Password:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Age:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Age">
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Address:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Phone:</label>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Gender:</label>
                    <div class="form-check col-lg-12">
                        <input class="form-check-input" type="radio" asp-for="Gender" checked value="M">
                        <label class="form-check-label" asp-for="Gender">
                            Male
                        </label>
                    </div>
                    <div class="form-check col-lg-12">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="F">
                        <label class="form-check-label" asp-for="Gender">
                            Female
                        </label>
                    </div>
                </div>
                <div class="form-group mt-2">
                    <label class="col-lg-3 control-label">Upload a different photo...</label>
                    <div class="col-lg-12">
                        <input class="form-control" type="file" name="ImagePath" value="@Model.ImagePath">
                        <input type="hidden" name="image" value="@Model.ImagePath" />
                    </div>
                </div>
                <br />
                <button type="submit" class="btn Sbtn">Save Edit</button>
            </form>
        </div>
    </div>
</div>
<hr>
